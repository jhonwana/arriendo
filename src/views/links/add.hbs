<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">

            <div class="card">
                <div class="card-body">
                    <form action="/links/add" method="POST">
                        <div class="form-group">
                            <input type="text" name="titulo" class="form-control" placeholder="Título" required data-error="Por favor, ingrese un título válido.">
                            <div class="help-block with-errors"></div>
                        </div>
                        <div class="form-group">
                            <input type="text" name="descripcion" class="form-control" placeholder="Descripción" required data-error="Por favor, ingrese una descripción válida.">
                            <div class="help-block with-errors"></div>
                        </div>
                        <div class="form-group">
                            <input type="text" name="direccion" class="form-control" placeholder="Dirección" required data-error="Por favor, ingrese una dirección válida.">
                            <div class="help-block with-errors"></div>
                        </div>
                        <div class="form-group">
                            <input type="text" name="ciudad" class="form-control" placeholder="Ciudad" required data-error="Por favor, ingrese una ciudad válida.">
                            <div class="help-block with-errors"></div>
                        </div>
                        <div class="form-group">
                            <input type="text" name="estado" class="form-control" placeholder="Estado" required data-error="Por favor, ingrese un estado válido.">
                            <div class="help-block with-errors"></div>
                        </div>
                        <div class="form-group">
                            <input type="text" name="precio" class="form-control" placeholder="Precio" required data-error="Por favor, ingrese un precio válido.">
                            <div class="help-block with-errors"></div>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>

<a href="/links" class="btn btn-info" role="button">Atrás</a>

